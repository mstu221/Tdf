<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Investment Dashboard</title>
    <style>
        body { margin: 0; padding: 0; font-family: Arial; background-color: #001f3f; color: white; display: flex; flex-direction: column; align-items: center; min-height: 100vh; }
        .header { width: 100%; display: flex; justify-content: space-between; padding: 20px; box-sizing: border-box; }
        .btn { padding: 12px 25px; border: none; border-radius: 8px; font-weight: bold; cursor: pointer; }
        .deposit-btn { background-color: #28a745; color: white; }
        .withdraw-btn { background-color: #dc3545; color: white; }
        .timer { margin-top: 40px; font-size: 3rem; background: #007bff; padding: 10px 40px; border-radius: 50px; box-shadow: 0 0 20px rgba(0, 123, 255, 0.5); }
        .main-container { margin-top: 60px; text-align: center; }
        .balance { font-size: 5rem; font-weight: bold; color: #ffcc00; }
        .income-status { font-size: 1.8rem; color: #00ffcc; border: 1px dashed #00ffcc; padding: 10px 30px; border-radius: 10px; margin-top: 20px; }
        .modal { display: none; position: fixed; z-index: 10; left: 0; top: 0; width: 100%; height: 100%; background-color: #002b1b; overflow-y: auto; }
        .modal-header { display: flex; align-items: center; padding: 15px; background: #003d27; }
        .back-btn { font-size: 24px; cursor: pointer; margin-right: 15px; }
        .modal-body { padding: 20px; text-align: center; }
        .input-field { width: 90%; padding: 15px; margin-top: 20px; border-radius: 10px; border: none; font-size: 16px; background: #005a3b; color: white; }
        .action-submit { width: 90%; padding: 15px; margin-top: 30px; border-radius: 30px; border: none; background: #ffcc00; color: #002b1b; font-weight: bold; font-size: 18px; cursor: pointer; }
    </style>
</head>
<body>

    <div class="header">
        <button class="btn deposit-btn" onclick="showPage('depositModal')">ডিপোজিট</button>
        <button class="btn withdraw-btn" onclick="showPage('withdrawModal')">উইথড্র</button>
    </div>

    <div class="timer" id="timer">24:00:00</div>

    <div class="main-container">
        <div class="balance" id="mainBalance">1000</div>
        <div class="income-status">মোট আয়: <span id="totalIncome">0</span> টাকা</div>
    </div>

    <div id="depositModal" class="modal">
        <div class="modal-header">
            <span class="back-btn" onclick="hidePage('depositModal')">←</span>
            <h3>ডিপোজিট করুন</h3>
        </div>
        <div class="modal-body">
            <input type="number" id="depAmount" class="input-field" placeholder="টাকার পরিমাণ">
            <button class="action-submit" onclick="addMoney()">নিশ্চিত করুন</button>
        </div>
    </div>

    <div id="withdrawModal" class="modal">
        <div class="modal-header">
            <span class="back-btn" onclick="hidePage('withdrawModal')">←</span>
            <h3>উইথড্র করুন</h3>
        </div>
        <div class="modal-body">
            <input type="number" id="witAmount" class="input-field" placeholder="টাকার পরিমাণ">
            <button class="action-submit" style="background: #dc3545; color: white;" onclick="takeMoney()">উইথড্র নিশ্চিত করুন</button>
        </div>
    </div>

    <script>
        let balance = localStorage.getItem('bal') ? parseFloat(localStorage.getItem('bal')) : 1000;
        let income = localStorage.getItem('inc') ? parseFloat(localStorage.getItem('inc')) : 0;
        let timeLeft = 24 * 60 * 60;

        document.getElementById('mainBalance').innerText = balance;
        document.getElementById('totalIncome').innerText = income;

        function updateTimer() {
            let h = Math.floor(timeLeft / 3600);
            let m = Math.floor((timeLeft % 3600) / 60);
            let s = timeLeft % 60;
            document.getElementById('timer').innerText = `${h.toString().padStart(2,'0')}:${m.toString().padStart(2,'0')}:${s.toString().padStart(2,'0')}`;
            if(timeLeft <= 0) {
                balance += 225; income += 225;
                updateDisplay();
                timeLeft = 24 * 60 * 60;
            } else { timeLeft--; }
        }
        setInterval(updateTimer, 1000);

        function showPage(id) { document.getElementById(id).style.display = 'block'; }
        function hidePage(id) { document.getElementById(id).style.display = 'none'; }

        function addMoney() {
            let amt = parseFloat(document.getElementById('depAmount').value);
            if(amt > 0) { balance += amt; updateDisplay(); hidePage('depositModal'); }
        }

        function takeMoney() {
            let amt = parseFloat(document.getElementById('witAmount').value);
            if(amt > 0 && balance >= amt) { balance -= amt; updateDisplay(); hidePage('withdrawModal'); }
            else { alert('পর্যাপ্ত ব্যালেন্স নেই'); }
        }

        function updateDisplay() {
            document.getElementById('mainBalance').innerText = balance;
            document.getElementById('totalIncome').innerText = income;
            localStorage.setItem('bal', balance);
            localStorage.setItem('inc', income);
        }
    </script>
</body>
</html>
